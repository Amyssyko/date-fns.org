{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "~/*": ["src/*"]
    },
    "noImplicitAny": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
