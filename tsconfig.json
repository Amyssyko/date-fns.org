{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "~/*": ["src/*"],
    }
  },
  "compileOnSave": true
}
